---
import Navbar from '../components/Navbar.astro'
import { ViewTransitions } from 'astro:transitions'
interface Props {
  title: string
}

const { title } = Astro.props

const titePro = `Alvise | ${title}`
const description = `Alvise Leal, web engineer with 5+ years of experience with the latest web technologies and solutions`
const url = 'https://portfolio-f7ag.onrender.com'
const img = url + '/' + 'webdev.jpg'
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Work+Sans" />
    <title>Alvise | {title}</title>
    <!-- Primary Meta Tags -->
    <meta name="title" content={titePro} />
    <meta name="description" content={description} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://portfolio-f7ag.onrender.com/" />
    <meta property="og:title" content={titePro} />
    <meta property="og:description" content={description} />
    <meta property="og:image" itemprop="image" content={img} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://portfolio-f7ag.onrender.com/" />
    <meta property="twitter:title" content={titePro} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={img} />
    <!--  <link rel="preload" href="https://prod.spline.design/d4fCm8hYmfCpWPoo/scene.splinecode" as="fetch" /> -->
    <ViewTransitions />
  </head>
  <body>
    <Navbar />
    <slot />
    <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.0/flowbite.min.js"></script>
  </body><script></script>

  <style is:global lang="scss">
    :root {
      --primary: #abceb5;
      --secondary: #b1c7c8;
      --accent: #52ccda;
      --background: #151616;
      --text: #eaefed --accent: 136, 58, 234;
      --accent-light: #ebe8e4;
      --accent-dark: #aec6c7;
      --azul: #1f282d;
      --color-font: #ebe8e4;
      --accent-gradient: linear-gradient(90deg, var(--primary) 60%, var(--accent) 100%);
      --short-gradient: linear-gradient(120deg, var(--primary) 0%, var(--accent) 100%);
    }
    html {
      font-family: 'Work Sans', system-ui, sans-serif;
      background: var(--background);
      background-size: 224px;
      color: #ebe8e4;
      font-size: 20px;
      overflow-x: hidden;
    }
    body {
      position: relative;
    }
    body::after {
      content: '';
      position: absolute;
      inset: 0;
      width: 100%;
      height: 100%;
      background-image: url('/noise.webp');
      pointer-events: none;
      user-select: none;
    }
    .text-gradient {
      width: fit-content;
      background: var(--accent-gradient);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      &.short {
        font-weight: 700;
        background: var(--short-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
      }
    }

    section.card {
      @apply h-[130vh];
      line-height: 1.6;
      position: relative;
    }
    img.bg {
      position: absolute;
      top: 0;
      left: 0;
      object-fit: cover;
      //object-position: 0% 100%;
      transform: scaleX(-1);
      height: 100%;
      width: 100%;
      z-index: -5;
    }

    h2,
    h3,
    h4,
    p,
    span {
      position: relative;
      z-index: 10;
    }
    code {
      font-family:
        Menlo,
        Monaco,
        Lucida Console,
        Liberation Mono,
        DejaVu Sans Mono,
        Bitstream Vera Sans Mono,
        Courier New,
        monospace;
    }
  </style>
</html>
