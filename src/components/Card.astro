---
interface Props {
  title: string
  header: string
}

const { title, header } = Astro.props
---

<section class="container">
  <div class="max-w-[70vw] ml-0">
    <h3 class="text-gradient text-xl short mb-1">{title}</h3>
    <h4 class="text-bold text-4xl mb-3">{header}</h4>
    <slot />
  </div>
</section>

<style lang="scss">
  p {
    margin-bottom: 2rem;
  }
</style>
