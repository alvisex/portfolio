---
interface Props {
  title: string
  header: string
  reversed?: boolean
}
const { title, header, reversed } = Astro.props
---

<div class={`container  ${reversed ? 'reversed' : ''}`}>
  <div class="md:max-w-[60%] ml-0 card-text">
    <!-- <h3 class="text-gradient text-2xl short mb-1">{title}</h3> -->
    <h3 class="text-gradient short font-bold text-2xl mb-3">{header}</h3>
    <slot />
  </div>
</div>

<script define:vars={{ title }}></script>

<style lang="scss" is:global>
  .card {
    --text-reveal-gradient: linear-gradient(to right, var(--primary) 0%, var(--accent) 50%, #5333 50%);
    --text-reveal-simple: linear-gradient(to right, var(--text) 50%, #5333 50%);
    p {
      @apply mb-8 font-bold text-4xl;

      /* & span {
        background: var(--text-reveal-simple);
        background-size: 200% 100%;
        background-position-x: 100%;
        color: transparent;
        background-clip: text;
      } */
    }
    .reversed {
      display: flex;
      justify-content: end;
      text-align: end;
      & > * {
        display: flex;
        flex-flow: column;
        align-items: end;
      }
    }
  }
</style>
