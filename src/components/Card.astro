---
interface Props {
  title: string
  header: string
  reversed?: boolean
}
const { title, header, reversed } = Astro.props
---

<div class={`container  ${reversed ? 'reversed' : ''}`}>
  <div class="md:max-w-[50%] ml-0">
    <h3 class="text-gradient text-xl short mb-1">{title}</h3>
    <h4 class="text-bold text-4xl mb-3">{header}</h4>
    <slot />
  </div>
</div>

<script define:vars={{ title }}></script>

<style lang="scss">
  p {
    margin-bottom: 2rem;
  }
  .reversed {
    display: flex;
    justify-content: end;
    text-align: end;
    & > * {
      display: flex;
      flex-flow: column;
      align-items: end;
    }
  }
</style>
